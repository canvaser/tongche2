<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/corner_white_white"
    android:visibility="gone">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="460dp"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:orientation="horizontal"
            android:background="@drawable/corner_title"
            android:gravity="center"
            android:paddingRight="10dp"
            android:paddingLeft="10dp">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/icon_star_blue"
                android:id="@+id/task_detail_collect" />
            <TextView
                style="@style/TextView_normal_white"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="沪D213213"
                android:gravity="center"
                android:id="@+id/task_detail_taskNo"/>
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/icon_phone_white"
                android:layout_marginLeft="10dp"
                android:id="@+id/task_detail_call"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:background="@drawable/bg_detail_top"
            android:orientation="horizontal"
            android:gravity="center">
            <FrameLayout
                android:layout_width="100dp"
                android:layout_height="100dp"
                >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:gravity="center"
                >
                <TextView
                    style="@style/TextView_normal_black"
                    android:textColor="@color/text_yellow"
                    android:text="33 m"
                    android:id="@+id/task_detail_finishedVolume"/>
                <View style="@style/horizontal_Line"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"/>
                <TextView
                    style="@style/TextView_normal_white"
                    android:text="80"
                    android:id="@+id/task_detail_planVolume"/>
            </LinearLayout>
            <com.siwei.tongche.views.CircleBar
                android:id="@+id/task_detail_progress"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_gravity="center"/>
            </FrameLayout>
            <TextView
                style="@style/TextView_large_white"
                android:layout_width="120dp"
                android:layout_height="50dp"
                android:background="@drawable/bg_task_time"
                android:layout_marginLeft="20dp"
                android:text="3:30:20"
                android:gravity="center"
                android:id="@+id/task_detail_progressTime"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingRight="10dp"
            android:paddingLeft="10dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="16dp">
            <TextView
              style="@style/TextView_normal_gray"
                android:id="@+id/task_detail_projectName"
                android:text="东方明珠电视塔"/>

            <TextView
                style="@style/TextView_normal_gray"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:gravity="right|center_vertical"
                android:text="欧阳明月"
                android:id="@+id/task_detail_linkMan"/>
        </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="@dimen/list_item_margin"
                android:layout_marginBottom="@dimen/list_item_margin">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        style="@style/TextView_normal_black"
                        android:text="C30细石"
                        android:id="@+id/task_detail_TongType"/>
                    <TextView
                        style="@style/TextView_small_gray"
                        android:text="（120+30 62米泵）"
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:id="@+id/task_detail_jiaozhu"/>
                    <TextView
                        style="@style/TextView_small_gray"
                        android:id="@+id/task_detail_remarks"
                        android:drawableLeft="@drawable/icon_remark"
                        android:drawablePadding="5dp"
                        android:layout_marginRight="5dp"/>
                </LinearLayout>
            </LinearLayout>

            <TextView
                style="@style/TextView_normal_gray"
                android:text="任务：7890 东方明珠电视塔"
                android:id="@+id/task_detail_castingPlace"/>

            <View
               style="@style/horizontal_Line"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="16dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                 >

                <TextView
                    style="@style/TextView_normal_black"
                    android:text="南通大名--->南通华润"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:id="@+id/task_detail_unit"/>
                <TextView
                    style="@style/TextView_normal_gray"
                    android:drawableLeft="@drawable/pic_express_car"
                    android:drawablePadding="5dp"
                    android:text="15/20"
                    android:id="@+id/task_detail_express"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="@dimen/list_item_margin"
                android:layout_marginBottom="@dimen/list_item_margin">
                <TextView
                    style="@style/TextView_normal_gray"
                    android:id="@+id/task_detail_contractNo"
                    android:text="合同：45896565656"/>

                <TextView
                    style="@style/TextView_small_gray"
                    android:id="@+id/task_detail_planTime"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:gravity="right|center_vertical"
                    android:text="计划：2016-10-21 9:00"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="5dp">
                <TextView
                    style="@style/TextView_normal_gray"
                    android:id="@+id/task_detail_projectAddress"
                    android:text="上海浦东新区南洋泾路"/>

                <TextView
                    style="@style/TextView_small_gray"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:gravity="right|center_vertical"
                    android:text="计划：2016-10-21 9:00"
                    android:id="@+id/task_detail_startTime"/>
            </LinearLayout>

             <Button
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_margin="10dp"
                android:background="@drawable/corner_blue_blue"
                android:textColor="@color/white"
                android:text="收起任务"
                 android:id="@+id/close_task_layout"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
