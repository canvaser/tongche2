<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_build_task"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
   android:orientation="vertical"
    android:fitsSystemWindows="true"
    android:background="@color/bg_gray">
    <include layout="@layout/normal_title"/>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

    <LinearLayout
        style="@style/Style_normal_item_layout"
        android:layout_marginTop="@dimen/demins_10">
        <TextView
            style="@style/TextView_normal_black"
            android:text="发货单位"
            android:layout_width="0dp"
            android:layout_weight="1"/>
        <TextView
            android:id="@+id/build_sendUnit"
            style="@style/TextView_normal_gray"
            android:text="请选择"
            android:drawableRight="@drawable/arrow_right_gray"/>
    </LinearLayout>
    <View
        style="@style/horizontal_Line"/>
    <LinearLayout
        style="@style/Style_normal_item_layout"
        android:layout_marginBottom="@dimen/demins_10">
        <TextView
            style="@style/TextView_normal_black"
            android:text="合同编号"
            android:layout_width="0dp"
            android:layout_weight="1"/>
        <TextView
            android:id="@+id/build_contractNo"
            style="@style/TextView_normal_gray"
            android:text="请选择"
            android:drawableRight="@drawable/arrow_right_gray"/>
    </LinearLayout>

            <LinearLayout
                style="@style/Style_normal_item_layout"
                >
                <TextView
                    style="@style/TextView_normal_black"
                    android:text="工程名称"
                    android:layout_width="0dp"
                    android:layout_weight="1"/>
                <TextView
                    android:id="@+id/build_projectName"
                    style="@style/TextView_normal_gray"
                    android:text="自动填充"
                    />
            </LinearLayout>
            <View
                style="@style/horizontal_Line"/>
            <LinearLayout
                style="@style/Style_normal_item_layout"
             >
                <TextView
                   style="@style/TextView_normal_black"
                    android:text="浇筑方式"
                    android:layout_width="0dp"
                    android:layout_weight="1"/>
                <TextView
                    android:id="@+id/build_pouringWay"
                    style="@style/TextView_normal_gray"
                    android:text="自动填充"
                   />
            </LinearLayout>
            <View
                style="@style/horizontal_Line"/>
            <LinearLayout
                style="@style/Style_normal_item_layout"
                android:layout_marginBottom="@dimen/demins_10">
                <TextView
                    style="@style/TextView_normal_black"
                    android:text="浇筑部位"
                    android:layout_width="0dp"
                    android:layout_weight="1"/>
                <TextView
                    android:id="@+id/build_pouringParts"
                    style="@style/TextView_normal_gray"
                    android:text="自动填充"
                   />
            </LinearLayout>


            <LinearLayout
                style="@style/Style_normal_item_layout"
              >
                <TextView
                    style="@style/TextView_normal_black"
                    android:text="砼品种"
                    android:layout_width="0dp"
                    android:layout_weight="1"/>
                <TextView
                    android:id="@+id/build_tongKind"
                    style="@style/TextView_normal_gray"
                    android:text="请选择"
                    android:drawableRight="@drawable/arrow_right_gray"/>
            </LinearLayout>
            <View
                style="@style/horizontal_Line"/>
            <LinearLayout
                style="@style/Style_normal_item_layout"
                android:layout_marginBottom="@dimen/demins_10">
                <TextView
                    style="@style/TextView_normal_black"
                    android:text="坍落度"
                    android:layout_width="0dp"
                    android:layout_weight="1"/>
                <TextView
                    android:id="@+id/build_slump"
                    style="@style/TextView_normal_gray"
                    android:text="请选择"
                    android:drawableRight="@drawable/arrow_right_gray"/>
            </LinearLayout>

            <LinearLayout
                style="@style/Style_normal_item_layout"
                >
                <TextView
                    style="@style/TextView_normal_black"
                    android:text="计划方量"
                    android:layout_width="0dp"
                    android:layout_weight="1"/>
                <EditText
                    android:id="@+id/build_planVolume"
                    style="@style/Style_Edittext_normal"
                    android:gravity="right"
                    android:hint="请输入方量"
                     />
            </LinearLayout>
            <View
                style="@style/horizontal_Line"/>
            <LinearLayout
                style="@style/Style_normal_item_layout"
                >
                <TextView
                    style="@style/TextView_normal_black"
                    android:text="计划时间"
                    android:layout_width="0dp"
                    android:layout_weight="1"/>
                <TextView
                    android:id="@+id/build_planTime"
                    style="@style/TextView_normal_gray"
                    android:text="请选择"
                    android:drawableRight="@drawable/arrow_right_gray"/>
            </LinearLayout>
            <View
                style="@style/horizontal_Line"/>
            <LinearLayout
                style="@style/Style_normal_item_layout"
                android:layout_marginBottom="@dimen/demins_10">
                <TextView
                    style="@style/TextView_normal_black"
                    android:text="签收规则"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:id="@+id/build_signRulesLinks"/>
                <TextView
                    android:id="@+id/build_signRules"
                    style="@style/TextView_normal_gray"
                    android:text="请选择"
                    android:drawableRight="@drawable/arrow_right_gray"/>
            </LinearLayout>


            <LinearLayout
                style="@style/Style_normal_item_layout"
                android:layout_marginBottom="@dimen/demins_10"
                android:layout_height="80dp">
                <EditText
                    android:id="@+id/build_remarks"
                   style="@style/edittext_normal"
                    android:gravity="top"
                    android:maxLength="256"
                    android:hint="请输入备注信息"
                    android:layout_height="match_parent"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                     />
            </LinearLayout>

        </LinearLayout>
    </ScrollView>
</LinearLayout>
