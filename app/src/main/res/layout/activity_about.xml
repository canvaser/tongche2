<?xml version="1.0" encoding="utf-8"?>
<LinearLayout  xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:clipToPadding="true"
    android:fitsSystemWindows="true"
    android:background="@color/white"
    >
    <include layout="@layout/normal_title"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="230dp"
        android:orientation="vertical"
        android:gravity="center">
        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:scaleType="fitCenter"
            android:src="@drawable/logo"
            android:id="@+id/login_bg"/>
        <TextView
            android:id="@+id/about_version_code"
            android:textSize="16sp"
            android:layout_marginTop="10dp"
            style="@style/TextView_normal_black"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="版本信息"/>
    </LinearLayout>
    <ScrollView
        android:fillViewport="true"
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <View
        style="@style/horizontal_Line"/>

    <LinearLayout
        style="@style/Style_normal_item_layout"
        >
        <TextView
            style="@style/TextView_normal_black"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="给我评分"/>
        <TextView
            android:id="@+id/setting_layout_markme"
            style="@style/TextView_normal_black"
            android:gravity="center_vertical"
            />
    </LinearLayout>
    <View
        style="@style/horizontal_Line"/>

    <LinearLayout
        style="@style/Style_normal_item_layout"
        >
        <TextView
            style="@style/TextView_normal_black"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="功能介绍"/>
        <TextView
            android:id="@+id/setting_layout_function"
            style="@style/TextView_normal_black"
            android:gravity="center_vertical"
            />
    </LinearLayout>
    <View
        style="@style/horizontal_Line"/>
    <LinearLayout
        style="@style/Style_normal_item_layout"
        >
        <TextView
            style="@style/TextView_normal_black"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="常见问题"/>
        <TextView
            android:id="@+id/setting_layout_solution"
            style="@style/TextView_normal_black"
            android:gravity="center_vertical"
            />
    </LinearLayout>
    <View
        style="@style/horizontal_Line"/>
    <LinearLayout
        style="@style/Style_normal_item_layout"
        >
        <TextView
            style="@style/TextView_normal_black"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="联系电话"/>
        <TextView
            android:id="@+id/about_call"
            style="@style/TextView_normal_black"
            android:gravity="center_vertical"
            />
    </LinearLayout>
    <View
        style="@style/horizontal_Line"/>
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_marginBottom="3dp"
        android:orientation="vertical"
        android:layout_gravity="bottom|center_horizontal"
        android:gravity="center_horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <TextView
        android:layout_marginTop="5dp"
        android:text="砼车许可服务协议"
        style="@style/TextView_small_black"
        android:textColor="@color/text_blue"/>
    <TextView
        android:layout_marginTop="3dp"
        android:text="思伟软件版本所有"
        style="@style/TextView_small_black"
        />
    <TextView
        android:layout_marginTop="3dp"
        android:text="Copyright @ 2016-2020 Tongche"
        style="@style/TextView_small_black"
        />
</LinearLayout>
</LinearLayout>
    </LinearLayout>
    </ScrollView>
</LinearLayout>
