<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/top_layout"
    android:layout_width="match_parent"
    android:layout_height="@dimen/title_view_height"
    android:background="@color/top_color"
    android:baselineAligned="false"
    android:gravity="center_vertical">

    <ImageView
        android:id="@+id/main_title_user_center"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:padding="@dimen/demins_10"
        android:src="@drawable/user_center"/>

    <TextView
        android:id="@+id/main_title"
        style="@style/TextView_large_white"
        android:layout_centerInParent="true"
        android:textStyle="bold"
        android:textSize="18sp"
        android:text="首页"/>

    <ImageView
        android:id="@+id/main_title_data"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:layout_toLeftOf="@+id/main_title_more"
        android:layout_centerVertical="true"
        android:src="@drawable/title_data"/>

    <ImageView
        android:id="@+id/main_title_more"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:padding="@dimen/demins_10"
        android:src="@drawable/title_add"/>

</RelativeLayout>